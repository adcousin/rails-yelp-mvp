<div class="container">
  <h1 class="d-flex justify-content-between">
    <div>Restaurants#index</div>
    <%= link_to 'Add a restaurant', new_restaurant_path %>
  </h1>
  <ul class="list-group">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex justify-content-between">
        <%= link_to "#{restaurant.name} (#{restaurant.phone_number})", restaurant_path(restaurant) %>
        <%= link_to restaurant.category.capitalize, '#' %>
      </li>
    <% end %>
  </ul>
</div>
